datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  url         String   // Project link
  imageUrl    String   // Optional: link to a screenshot/image
  createdAt   DateTime @default(now())
}
